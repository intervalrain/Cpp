{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [

      {
        "type": "shell",
        "label": "g++ build cpp program",
        "command": "/usr/bin/g++",
        "args": [
          "-g",
          "-std=c++11",
          "-stdlib=libc++",
          "-o",
          "${fileBasenameNoExtension}",
          "${fileDirname}/${file}"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "編譯器: /usr/bin/g++"
      }
    ]
  }